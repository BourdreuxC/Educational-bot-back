{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ressources_base_name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 20
        }
    },
    "functions": [],
    "variables": {
        "serverfarmName": "[concat(parameters('ressources_base_name'), 'serviceapp')]",
        "frontName":"[concat(parameters('ressources_base_name'), '-front')]",
        "apiName": "[concat(parameters('ressources_base_name'), '-api')]",
        "storageAccountsName": "[concat(parameters('ressources_base_name'), '-storage')]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2016-09-01",
            "name": "[variables('serverfarmName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "name": "[variables('serverfarmName')]",
                "hostingEnvironment": "",
                "numberOfWorkers": 1
            },
            "sku": {
                "name": "F1",
                "tier": "Free",
                "size": "F1",
                "family": "F",
                "capacity": 0
            }
        },

        {
            "name": "[variables('frontName')]",
            "type": "Microsoft.Web/sites",
            "apiVersion": "2020-12-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', variables('serverfarmName'))]": "Resource",
                "displayName": "[variables('frontName')]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('serverfarmName'))]"
            ],
            "properties": {
                "name": "[variables('frontName')]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms',  variables('serverfarmName'))]"
            }
        },
        {
            "name": "[variables('apiName')]",
            "type": "Microsoft.Web/sites",
            "apiVersion": "2020-12-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', variables('serverfarmName'))]": "Resource",
                "displayName": "[variables('apiName')]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('serverfarmName'))]"
            ],
            "properties": {
                "name": "[variables('apiName')]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms',  variables('serverfarmName'))]"

            }
        },
        {
            "name": "[variables('storageAccountsName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-04-01",
            "tags": {
                "displayName": "[variables('storageAccountsName')]"
            },
            "location": "[resourceGroup().location]",
            "kind": "StorageV2",
            "sku": {
                "name": "Standard_LRS"
            }
        }
        

    ],
    "outputs": {}
}